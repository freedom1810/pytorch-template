{
    "name": "22-Covid19-PlainCNN",
    "n_gpu": 1,
    "fp16": false,
    "ema": false,

    "arch": {
        "type": "PlainCNN",
        "args": {
                 "num_classes": 1,
                 "inchannels": 1,
                 "use_coord": true,
                 "pretrained": true}
    },
    "dataset": {
        "csv_path": "/home/hana/sonnh/data/AICovidVN/aicv115m_public_train_full/aicv115m_final_public_train/kfold_multi_feature_oversampling.csv",
        "audio_folder": "/home/hana/sonnh/data/AICovidVN/aicv115m_public_train_full/aicv115m_final_public_train/public_train_audio_files_over_sampling/",
        "training_batch_size": 32,
        "validate_batch_size": 32,
        "num_workers": 20,
        "mfcc_config": {
            "normalize": false,
            "use_derivative": false,
            "n_mfcc": 39,
            "n_fft": 2048,
            "hop_length": 512,
            "target_sr": 22050,
            "max_duration": 7
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0005
        }
    },
    "train_loss": "bce_with_logits_loss",
    "val_loss": "bce_with_logits_loss",
    "metrics": [
        "roc_auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 15,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 50,
        "only_save_best": false,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "max val_roc_auc",
        "early_stop": 100,
        "tensorboard": true
    }
}
