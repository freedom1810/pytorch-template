{
    "name": "52-Covid19-CNN14",
    "n_gpu": 2, 
    "fp16": false,
    "ema": false,
    "swa": {
        "swa_lr": 0.05,
        "swa_start": 400000
    },

    "arch": {
        "type": "Transfer_Cnn14",
        "args": {
                 "sample_rate": 22050,
                 "window_size": 512,
                 "hop_size": 2048,
                 "mel_bins": 64,
                 "fmin": 0,
                 "fmax": 48000,
                 "classes_num": 1,
                 "freeze_base": false
                }
    },
    "dataset": {
        "csv_path": "/home/hana/sonnh/data/AICovidVN/aicv115m_public_train_full/aicv115m_final_public_train/remove_duplicate/group_included_rmsingle2_kfold_oversampling_new_format.csv",
        "audio_folder": "/home/hana/sonnh/data/AICovidVN/aicv115m_public_train_full/aicv115m_final_public_train/public_train_audio_files_over_sampling/",
        "training_batch_size": 32,
        "validate_batch_size": 32,
        "num_workers": 20,
        "cache": true,
        "audio_config": {
            "target_sr": 22050,
            "max_duration": 7
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.1
        }
    },
    "train_loss": "bce_with_logits_loss",
    "val_loss": "bce_with_logits_loss",
    "metrics": [
        "roc_auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 30,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 100,
        "only_save_best": true,
        "save_dir": "saved1/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "max val_roc_auc",
        "early_stop": 100,
        "tensorboard": true
    }
}
