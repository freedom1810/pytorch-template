{
    "name": "11-Covid19-B0",
    "n_gpu": 1,
    "fp16": false,
    "ema": true,

    "arch": {
        "type": "TimmBackbone",
        "args": {
            "model_name": "tf_efficientnet_b0_ns",
                 "num_classes": 2,
                 "inchannels": 1,
                 "pretrained": true}
    },
    "do_pseudo": false,
    "unlabeled_dataset": {
        "csv_path": "/home/hana/sonnh/data/AICovidVN/aicv115m_public_train_full/aicv115m_final_public_test/public_test_sample_submission.csv",
        "audio_folder": "/home/hana/sonnh/data/AICovidVN/aicv115m_public_train_full/aicv115m_final_public_test/public_test_audio_files/",
        "training_batch_size": 16,
        "num_workers": 20
    },
    "dataset": {
        "csv_path": "/home/hana/sonnh/data/AICovidVN/aicv115m_public_train_full/aicv115m_final_public_train/kfold_multi_feature.csv",
        "audio_folder": "/home/hana/sonnh/data/AICovidVN/aicv115m_public_train_full/aicv115m_final_public_train/train_115M_final_rm_silent_2/",
        "training_batch_size": 32,
        "validate_batch_size": 32,
        "num_workers": 20,
        "mfcc_config":
            {
                "do_remove_silent": true, "n_mfcc": 15, "n_fft": 1024, "hop_length": 256, "target_sr": 48000, "max_duration": 15
            },
        "melspec_config":{
            "width": 448, "height":448, "n_fft": 2048, "hop_length": "auto", "target_sr": 48000, "max_duration": 15
            }
    },
    "data_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0005
        }
    },
    "train_loss": "labelsmoothingloss",
    "val_loss": "crossentropyloss",
    "metrics": [
        "roc_auc_multi_label"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 15,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 50,
        "only_save_best": false,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "max val_roc_auc_multi_label",
        "early_stop": 100,

        "tensorboard": true
    }
}
