{
    "name": "all_stack_2",
    "n_gpu": 2,
    "fp16": false,
    "ema": false,

    "arch": {
        "type": "StackNet",
        "args": {
            "num_classes": 1,
            "num_features": 13
        }
    },
    "dataset": {
        "csv_path": "/home/hana/sonnh/covidaivn/stack_feature/group_included_rmsingle2__rm_audio_slient_kfold.csv",
        "data_path": "/home/hana/sonnh/covidaivn/stack_feature/data_all.pkl",
        "training_batch_size": 16,
        "validate_batch_size": 32,
        "num_workers": 20,
        "cache": true
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001
        }
    },
    "train_loss": "bce_with_logits_loss",
    "val_loss": "bce_with_logits_loss",
    "metrics": [
